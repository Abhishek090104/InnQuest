<% layout("/layouts/boilerplate") -%>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>AI Travel Suggestions</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .suggestions-container {
      white-space: pre-line;
      line-height: 1.6;
      padding: 20px;
    }
    .suggestions-container br {
      margin-bottom: 10px;
    }
    .category-heading {
      color: #2c3e50;
      margin-top: 20px;
      margin-bottom: 15px;
    }
    .destination-card {
      background-color: #f8f9fa;
      border-radius: 8px;
      padding: 15px;
      margin-bottom: 15px;
    }
  </style>
</head>
<body>
  <div class="container mt-4">
    <h2 class="mb-4">AI Travel Suggestions</h2>
    <p class="lead">Based on your preferences, here are some recommended destinations:</p>
    <div class="suggestions-container alert alert-info">
      <%- suggestions %>
    </div>
    <a href="/search" class="btn btn-secondary mt-3">Back to Search</a>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>